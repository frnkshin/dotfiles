; hide ui components
(if (fboundp 'menu-bar-mode) (menu-bar-mode -1))
(if (fboundp 'tool-bar-mode) (tool-bar-mode -1))
(if (fboundp 'scroll-bar-mode) (scroll-bar-mode -1))

; hide splash screen
(setq inhibit-startup-screen t)

; initialize melpa and package
(require 'package)
(let* ((no-ssl (and (memq system-type '(windows-nt ms-dos))
                    (not (gnutls-available-p))))
       (url (concat (if no-ssl "http" "https") "://melpa.org/packages/")))
  (add-to-list 'package-archives (cons "melpa" url) t))
(when (< emacs-major-version 24)
  (add-to-list 'package-archives '("gnu" . "http://elpa.gnu.org/packages/")))
(package-initialize)

; set path to dependencies
(setq base-dir
  (expand-file-name "/home/rob/.emacs.d/lib" user-emacs-directory))
(setq custom-file
  (expand-file-name "/home/rob/.emacs.d/custom.el" user-emacs-directory))

; load dependencies
(add-to-list 'load-path base-dir)
(load custom-file) ; emacs-custom settings

(setq-default indent-tabs-mode nil) ; use spaces
(setq-default tab-width 2) ; emacs 23.1, 24.2, default to 8


(setq backup-directory-alist '(("." . "~/.emacs.d/backup"))
  backup-by-copying t    ; Don't delink hardlinks
  version-control t      ; Use version numbers on backups
  delete-old-versions t  ; Automatically delete excess backups
  kept-new-versions 20   ; how many of the newest versions to keep
  kept-old-versions 5    ; and how many of the old
)

(require 'visual)
(require 'org-indent)
(org-indent-mode -1)
(require 'base-packages)
(require 'languages)
(require 'keymap)
