import csv
import sys
import collections

csv.field_size_limit(sys.maxsize)

class FakeNews:

    def __init__(self):
        self.__file_path = "../res/fake.csv"
        self.__file_object = open(self.__file_path, 'r', encoding='latin1', newline='')

    def load_fake(self):
        reader = csv.reader(self.__file_object, quotechar='"', delimiter=',')
        data = collections.defaultdict(dict)
        for i, row in enumerate(reader):
            data[i]['head'] = row[4]
            data[i]['text'] = row[5]
        return data

class RealNews:

    def __init__(self):
        self.__file_path = "../res/news_summary.csv"
        self.__file_object = open(self.__file_path, 'r', encoding='latin1', newline='')

    def load_real(self):
        reader = csv.reader(self.__file_object, quotechar='"', delimiter=',')
        data = collections.defaultdict(dict)
        for i, row in enumerate(reader):
            data[i]['head'] = row[2]
            data[i]['text'] = row[5]
            data[i]['summary'] = row[4]
        return data

